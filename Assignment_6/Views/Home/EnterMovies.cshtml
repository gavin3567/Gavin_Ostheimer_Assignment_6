@{
    ViewData["Title"] = "Enter Movies";
}

@model Assignment_6.Models.MovieResponse

<h1>Enter Movies</h1>


<div>
    <form method="post">

        <div asp-validation-summary="All"></div>

        <label asp-for="MovieCategory">Movie Category:</label>
        <select asp-for="MovieCategoryId">
            <option value="">Select a Category</option>
            @foreach (MovieCategory m in ViewBag.MovieCategories)
            {
                <option value="@m.MovieCategoryId">@m.CategoryName</option>
            }
        </select><br />

        <label asp-for="MovieTitle">Movie Title:</label>
        <input asp-for="MovieTitle" /><br />

        <label asp-for="MovieYear">Movie Year:</label>
        <input asp-for="MovieYear" /><br />

        <label asp-for="MovieDirector">Movie Director:</label>
        <input asp-for="MovieDirector" /><br />

        <label asp-for="MovieRating">Movie Rating:</label>
        <select asp-for="MovieRating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />

        <label asp-for="MovieEdited">Movie Edited:</label>
        <select asp-for="MovieEdited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <label asp-for="MovieLent">Movie Lent To:</label>
        <input asp-for="MovieLent" /><br />

        <label asp-for="MovieNotes">Movie Notes:</label>
        <input asp-for="MovieNotes" maxlength="25" /><br />


        <button type="submit">Submit Movie</button>
    </form>
</div>